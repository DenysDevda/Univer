@model List<University.Models.Student>
@{ ViewBag.Title = "Students Table"; }

<h2 align="center">Students Table</h2>

<br />

<table border="2" align="center" class="tab">
    <tr>
        <td><b>ID</b></td>
        <td><b>Last name</b></td>
        <td><b>First name</b></td>
        <td><b>Details</b></td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.LastName</td>
            <td>@item.FirstName</td>
            <td> <a href="Student/Details/@item.Id">Show Details</a></td>

        </tr>
    }
</table>

</br>

<div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="addstudent" value="Add new student" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="remstudent" value="Remove student" />
    </div>

</div>
















