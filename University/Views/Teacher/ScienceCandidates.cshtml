@model List<University.Models.Teacher>
@{ViewBag.Title = "Science Candidates Table";}

<div class="back">
    <strong>
        @Html.ActionLink("Back", "Index")
    </strong>
</div>

<table border="2" align="center">
    <tr>

        <td><strong>Id</strong></td>
        <td><strong>FirstName</strong></td>
        <td><strong>LastName</strong></td>
        <td><b>Details</b></td>

    </tr>
    @foreach (var item in Model)
    {
       <tr>
          <td>@item.Id</td>
          <td>@item.FirstName</td>
          <td>@item.LastName</td>
          <td><a href="../CandidatDetails/@item.Id">Show Details</a></td>

       </tr>
    }
</table>

</br>

<div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="addcandidat" value="Add new candidat" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="removecandidat" value="Remove candidat" />
    </div>

</div>


