@model List<University.Models.Teacher>
@{ViewBag.Title = "Aspirants Table";}

<div class="back">
    <strong>
        @Html.ActionLink("Back", "Index")
    </strong>
</div>

<table border="2" align="center">
    <tr>

        <td><strong>Id</strong></td>
        <td><strong>FirstName</strong></td>
        <td><strong>LastName</strong></td>
        <td><b>Details</b></td>

    </tr>
     @foreach (var item in Model)
      {
        <tr>
           <td>@item.Id</td>
           <td>@item.FirstName</td>
           <td>@item.LastName</td>
           <td><a href="../AspirantDetails/@item.Id">Show Details</a></td>

        </tr>
      }
</table>

</br>

<div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="addaspirant" value="Add new aspirant" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-default border border-dark c-light font-weight-bold" id="removeaspirant" value="Remove aspirant" />
    </div>

</div>



